{
  "name": "twokeys",
  "version": "1.0.0",
  "description": "A easy to setup second keyboard, designed for everyone. ",
  "repository": "https://github.com/Gum-Joe/2Keys",
  "author": "Kishan <kishansambhi@hotmail.co.uk>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .ts --ext .js .",
    "compile:all": "yarn wsrun -tc compile",
    "test:all": "cross-env NODE_ENV=test mocha"
  },
  "workspaces": {
    "packages": [
      "packages/@twokeys/*",
      "detectors/*/controller",
      "executors/@twokeys/*"
    ],
    "nohoist": [
      "**/node-addon-api",
      "**/node-addon-api/**",
      "**/chalk",
      "**/chalk/**"
    ]
  },
  "devDependencies": {
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "lerna": "3.20.2",
    "node-gyp": "^6.1.0",
    "ts-node": "^8.10.2",
    "wsrun": "^5.2.1"
  },
  "dependencies": {
    "chalk": "4.0.0"
  }
}
