{
  "name": "@twokeys/commandex",
  "version": "1.0.0",
  "description": "Contains commandex, the code & compiler that help 2Keys share logic across the GUI and CLI",
  "main": "lib/index.js",
  "repository": "https://github.com/Gum-Joe/2Keys",
  "author": "Kishan <kishansambhi@hotmail.co.uk>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "compile": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts .",
    "watch": "tsc -p tsconfig.build.json --watch",
    "docs": "typedoc",
    "test": "cross-env NODE_ENV=test mocha",
    "coverage": "cross-env NODE_ENV=test nyc mocha",
    "coverage:upload": "codecov"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@twokeys/core": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-fs": "^2.0.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.2",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "ts-node": "^8.9.0",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3"
  }
}
