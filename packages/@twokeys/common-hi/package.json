{
  "name": "@twokeys/common-hi",
  "version": "1.0.0",
  "description": "Encompasses things shared by the GUI and CLI, such as interfaces defining Setup UI, as well as the code for these.",
  "main": "lib/index.js",
  "repository": "https://github.com/Gum-Joe/2Keys",
  "author": "Kishan <kishansambhi@hotmail.co.uk>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "compile": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts .",
    "watch": "tsc -p tsconfig.build.json --watch",
    "docs": "typedoc",
    "test": "cross-env NODE_ENV=test mocha",
    "coverage": "cross-env NODE_ENV=test nyc mocha",
    "coverage:upload": "codecov"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@twokeys/core": "^1.0.0"
  }
}
