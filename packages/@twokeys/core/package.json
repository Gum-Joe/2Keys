{
  "name": "@twokeys/core",
  "version": "1.0.0",
  "description": "The Core Modules that are used throughout 2Keys",
  "main": "lib/index.js",
  "repository": "https://github.com/Gum-Joe/2Keys",
  "author": "Kishan <kishansambhi@hotmail.co.uk>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "compile": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint --ext .ts .",
    "docs": "typedoc --includes src",
    "test": "cross-env NODE_ENV=test mocha",
    "test:log": "cross-env mocha",
    "coverage": "cross-env NODE_ENV=test nyc mocha",
    "coverage:upload": "codecov"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/progress": "^2.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.7.0",
    "cross-env": "^7.0.2",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.4",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "progress": "^2.0.3",
    "yaml": "^1.9.2"
  }
}
